    <type>Text</type>
  </SQL>

  <!--增加发票卷信息-->
  <SQL id="aisino.Fwkp.Bsgl.InsertFPJ">
    <value>
      <![CDATA[INSERT INTO FPJ VALUES(@JH, @FPZL, @LBDM, @QSHM, @FPZS, @LGRQ, @KPJH, @SYZS, @MSBZ, @DJBZ, @YWBZ, @SYBZ)]]>
